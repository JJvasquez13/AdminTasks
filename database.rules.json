{
  "rules": {
    "tasks": {
      ".read": "true",
      ".write": "true",
      "$taskId": {
        ".validate": "newData.hasChildren(['text', 'completed', 'createdAt']) && newData.child('text').isString() && newData.child('text').val().length <= 500 && newData.child('completed').isBoolean() && newData.child('createdAt').isString() && newData.child('createdAt').val().matches(/^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}Z$/)"
      }
    }
  }
}
